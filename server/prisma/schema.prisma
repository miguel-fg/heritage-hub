datasource db {
    provider    = "postgresql"
    url         = env("DATABASE_URL")
}

generator client {
    provider    = "prisma-client-js"
}

model Model {
    id              String      @id @default(nanoid(16)) @db.Uuid 
    accNum          String?
    name            String
    caption         String
    description     String
    materials       Material[]
    tags            Tag[]
    dimensions      Json?
    modelPath       String
    thumbnailPath   String
    multimediaPath  String[]
    createdAt       DateTime @default(now())
}

model Tag {
    id        Int        @id @default(autoincrement())
    name      String     @unique
    models    Model[]
}

model Material {
    id        Int        @id @default(autoincrement())
    name      String     @unique
    models    Model[]
}
    